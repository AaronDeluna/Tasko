<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="202502181017" author="Ivan">
        <createTable tableName="users">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="pk_user_id"/>
            </column>
            <column name="username" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="project">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="pk_project_id"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="user_id" type="int">
                <constraints nullable="false"
                             referencedColumnNames="id"
                             referencedTableName="users"
                             foreignKeyName="fk_user_id"/>
            </column>
            <column name="create_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="columns">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="pk_column_id"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="int">
                <constraints nullable="false"
                             referencedColumnNames="id"
                             referencedTableName="project"
                             foreignKeyName="fk_project_id"/>
            </column>
            <column name="position" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="task">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="pk_task_id"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="due_date" type="DATE"/>
            <column name="priority" type="varchar(30)"/>
            <column name="column_id" type="int">
                <constraints nullable="false"
                             referencedColumnNames="id"
                             referencedTableName="columns"
                             foreignKeyName="fk_column_id"/>
            </column>
            <column name="position" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="create_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
